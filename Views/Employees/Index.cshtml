@model IEnumerable<WebApplication1.Models.Employee>
@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>


<a href="@Url.Action("Create")" class="btn btn-success mb-3">Create New Employee
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle ms-1" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
    </svg>
</a>


<table class="table table-striped border border-2 border-dark rounded-3">
    <thead class="bg-dark text-white ">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Department.Name</td>
                <td>@employee.Position.Title</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = employee.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", new { id = employee.Id })" class="btn btn-success">Details</a>
                    <a href="@Url.Action("Delete", new { id = employee.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
