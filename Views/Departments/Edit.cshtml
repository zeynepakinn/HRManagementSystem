@model WebApplication1.DTOs.EditDepartmentDTO

<h1 class="text-2xl font-bold mb-4">Edit Department</h1>

<div class="bg-white shadow-md rounded-lg p-6">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-4">
            <label asp-for="Name" class="block text-gray-700 font-semibold mb-2"></label>
            <input asp-for="Name" class="form-control border border-gray-300 rounded-lg p-2 w-full" />
            <span asp-validation-for="Name" class="text-red-600"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Description" class="block text-gray-700 font-semibold mb-2"></label>
            <textarea asp-for="Description" class="form-control border border-gray-300 rounded-lg p-2 w-full" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-red-600"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" />
        </div>
    </form>

    <div class="mt-4">
        <a asp-action="Index" class="text-blue-600 hover:underline">Back to List</a>
    </div>
</div>
