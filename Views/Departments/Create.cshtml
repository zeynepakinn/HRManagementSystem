@model WebApplication1.Models.CreateDepartmentDTO

<h1>Create Department</h1>

<form asp-action="Create" method="post" class="border-3 border-primary m-3">
    @* Display Validation Summary *@
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group pb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group pb-3">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"
            style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: 3rem;">
        Create
    </button>
</form>

<div class="btn btn-primary mt-4">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
    </svg>
    <a asp-action="Index" class="text-white" style="text-decoration:none;">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
