@model Attendance

@{
    ViewData["Title"] = "Delete Attendance";
}

<h1>Delete Attendance</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="border border-2 rounded p-4">
    <dl class="row">
        <dt class="col-sm-2">Employee Name</dt>
        <dd class="col-sm-10">@Model.Employee.FirstName @Model.Employee.LastName</dd>

        <dt class="col-sm-2">Check-In Time</dt>
        <dd class="col-sm-10">@Model.CheckInTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Check-Out Time</dt>
        <dd class="col-sm-10">@Model.CheckOutTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @if (Model.IsAbsent)
            {
                <span class="badge-false">✗</span>
            }
            else
            {
                <span class="badge-true">✓</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>