@using WebApplication1.ViewModel
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
   <style>
        /* Basic reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Background */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Centering the login box */
        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        /* Login Box */
        .login-box {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Heading */
        h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 24px;
        }

        /* Input Fields */
        .textbox {
            margin-bottom: 20px;
        }

            .textbox input {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: 2px solid #ccc;
                border-radius: 5px;
                outline: none;
            }

                .textbox input:focus {
                    border-color: #5e6e71;
                }

        /* Button */
        .btn {
            width: 100%;
            padding: 12px;
            font-size: 18px;
            color: #fff;
            background-color: #5e6e71;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #4b5a5e;
            }

        /* Error message */
        .error-message {
            color: #e74c3c;
            font-size: 14px;
            margin-top: 10px;
        }

   </style>
</head>
<body>

    <div class="login-container">
        <div class="login-box">
            <h2>Login</h2>
            <form method="post" asp-action="Login">
                <div class="textbox">
                    <input type="text" placeholder="Username" name="UserName" required value="@Model.UserName">
                </div>
                <div class="textbox">
                    <input type="password" placeholder="Password" name="Password" required>
                </div>
                <button type="submit" class="btn">Login</button>
            </form>
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="error-message">
                    <strong>Error:</strong> Invalid username or password.
                </div>
            }
        </div>
    </div>

</body>
</html>
