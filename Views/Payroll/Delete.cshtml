@model WebApplication1.Models.Payroll

<h1>Delete Payroll</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Payroll</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Employee</dt>
        <dd class="col-sm-10">@Model.Employee.FirstName @Model.Employee.LastName</dd>

        <dt class="col-sm-2">Payment Date</dt>
        <dd class="col-sm-10">@Model.PaymentDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Gross Amount</dt>
        <dd class="col-sm-10">@Model.GrossAmount</dd>

        <dt class="col-sm-2">Tax Amount</dt>
        <dd class="col-sm-10">@Model.TaxAmount</dd>

        <dt class="col-sm-2">Net Amount</dt>
        <dd class="col-sm-10">@Model.NetAmount</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<a asp-action="Index">Back to List</a>
